@import '../../../templates//nothing-template/nothing-template.wxss';
page{
  background-color: #EEE9E9;
}
/*订单列表*/
.swiper-box{
  height: 100%;
  margin-bottom: 20rpx;
}
/* 黑线 使得产生阴影效果 */
.line {
  width: 100%;
  height: 3rpx;
  background: lightgray;
}
.hot-box{
  background-color: #EEE9E9;
}
.orderDetails {
  height: 350rpx;
  background: #fff;
  border-bottom: 1rpx solid #e6e6e6;
}
.orderListTitle {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #BEBEBE;
}
.orderListTitle .cinematitle {
  width: 300rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  padding-right: 50rpx;
  margin-left:10px;
}
.orderListTitle .movietitle {
  width: 300rpx;
  text-align: right;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  float: right;
  margin-right: 20rpx;
  color: #FE9900;
  font-size: 34rpx;
}
.orderListDetails {
  display: flex;
  height: 250rpx;
  
}
.orderListDetails .movieimg {
  flex: 1;
  width:135rpx;
  height:200rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.orderListDetails .movieimg image {
  width: 100%;
  height: 100%;
}
.orderListDetails .movieinfo {
  flex: 4;
  margin: 40rpx 10px 20px 30rpx;
  font-size:15px;
}
.orderListDetails .movieinfo .moviedate .movietime .moviehall{
  font-size:15px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  /* margin-bottom:10px; */
}
.movieprice {
  background-color: #fff;
  height: 80rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
.movieprice>view {
  float: left;
  margin-left: 30rpx;
}
.totalprice{
  line-height: 80rpx;
}
.unsubscribe{
  width: 100rpx;
  height: 50rpx;
  border-radius: 5px; 
  background-color: white;
  border: solid 1.5px rgb(170, 170, 170);
  float: right;
  margin-right: 30rpx;
  margin-top: 15rpx;
  text-align: center;

}
/* 返回顶部 */
.goTop{
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  z-index: 1;
  bottom: 100rpx;
  background: rgba(0,0,0,.10);
  right: 50rpx;
  border-radius: 50%;
}
.loading {
  position: relative;
  padding-top:25rpx;
  padding-bottom: 35rpx;
  text-align: center;
}