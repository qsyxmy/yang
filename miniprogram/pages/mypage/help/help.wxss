page{
  background: #EEE9E9;
}
.help {
  width: 100%;
  height: 100%;
  background: #EEE9E9;
}
.title {
  font-size: 30rpx;
  color: #000000;
  padding: 18rpx 23rpx;
  font-family: '微软雅黑';
}
.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 130rpx;
  margin-top: 20rpx;
  position: relative; /*父元素位置要设置为相对*/
  background: white;
}
.item-title {
  color: gray;
  font-size: 37rpx;
  margin-left: 20rpx;
}
.image-jiantou {
  width: 40rpx;
  height: 40rpx;
  position: absolute; /* 要约束所在位置的子元素的位置要设置成绝对 */
  right: 0; /* 靠右调节 */
  margin-right: 35rpx;
}
/* 黑线 使得产生阴影效果 */
.line {
  width: 100%;
  height: 3rpx;
  background: lightgray;
}