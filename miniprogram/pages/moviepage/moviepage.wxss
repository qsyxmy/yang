page {
  background: #EEE9E9;
}

/*导航条*/
.scroll {
  position: fixed;
  padding-top: 100rpx;
  overflow: hidden;
  top: 0;
  left: 0;
  background: #fff;
  z-index: 10;
  white-space: nowrap;
}
/* 隐藏滚动条 */
::-webkit-scrollbar {
width: 0;
height: 0;
color: transparent;
display: none;
}

.scroll-tit {
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}

.scroll-tit view{
  display: inline-block;
  padding: 6rpx 20rpx;
  border: 3rpx solid #dedede ;
  margin: 0 10rpx;
  border-radius: 10rpx;
  font-size: 18px;
}

.scroll-tit .hover {
  background: #66CDAA;
  color: #fff;
}
.main{
  padding-top: 202rpx;
}
.case-page {
  padding-top: 15rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  border-width: 3px;
  border-color: black;
}

.list-masonry {
  column-count: 2;
  /*规定为被分隔的列数*/
  column-gap: 20rpx;
  /*列间隔*/
}

.item-masonry {
  background-color: #fff;
  break-inside: avoid;
  /*避免在元素内部插入分页符*/
  box-sizing: border-box;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
}

.item-masonry image {
  width: 100%;
}

/* 返回顶部 */
.goTop {
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  z-index: 1;
  bottom: 100rpx;
  background: rgba(0, 0, 0, .10);
  right: 50rpx;
  border-radius: 50%;
}