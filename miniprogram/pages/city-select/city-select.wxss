@import "../../templates/nothing-template/nothing-template.wxss";
.container {
  background-color: #ebebeb;
  color: #333;
  font-size: 28rpx;
}

/* 搜索区样式 */

.search-city {
  display:flex;
  flex-direction: row;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #f5f5f5;
  padding: 22rpx 30rpx;
  box-sizing: border-box;
}

.search-input {
  flex: 1;
  height: 2em;
  background: #fff;
  color: #999;
}
.icon-search{
  width: 50rpx;
  height: 2em;
  background: #fff;
}
.icon-search image{
  margin: 15rpx 15rpx 15rpx 15rpx;
  width: 30rpx;
  height: 30rpx;
  background: #fff;
}

/* 搜索结果区样式 */

.result-box {
  width: 100%;
  margin-top: 100rpx;
  background: #f5f5f5;
  
}
.result-item{
  height: 88rpx;
  line-height: 88rpx;
  margin-left: 30rpx;
  border-bottom: 1px solid #c8c7cc;
}

/* 城市列表样式 */
.citylist-content{
  margin-top: 100rpx;
}

.section-title {
  padding-left: 30rpx;
  line-height: 60rpx;
}

.section-body {
  background-color: #f5f5f5;
  padding-right: 60rpx;
}

.section-body .section-item {
  height: 88rpx;
  line-height: 88rpx;
  margin-left: 30rpx;
  border-bottom: 1px solid #c8c7cc;
}

.section-body .section-item:last-child {
  border: none;
}

.section-body-inline {
  display: flex;
  flex-wrap: wrap;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
  padding-left: 30rpx;
}

.section-body-inline .section-item {
  min-width: 26%;
  background: #fff;
  margin-top: 30rpx;
  margin-right: 4%;
  border-radius: 6rpx;
  line-height: 66rpx;
  text-align: center;
  box-sizing: border-box;
  border: 1px solid #e6e6e6;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 0 30rpx;
}

/* 城市侧边栏导航样式 */

.citylist-nav {
  position: fixed;
  top: 120rpx;
  /* top:200rpx; */
  right: 0;
  width: 30px;
  height: 25px;
  text-align: center;
}

.citylist-nav>view {
  font-size: 24rpx;
  line-height: 1.5;
}
.citylist-nav-item{
  padding-bottom: 5rpx;
  width: 50rpx;
  height: 40rpx;
}
